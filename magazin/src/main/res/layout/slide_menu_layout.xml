    	android:orientation="horizontal" >
	</LinearLayout>
	
	<LinearLayout
     	android:id="@+id/slide_layout18"
    	android:layout_width="match_parent"
    	android:layout_height="0dp"
    	android:layout_weight="190"
    	android:orientation="horizontal" >
	    
	    <RelativeLayout
    		android:layout_width="0dp"
    		android:layout_height="match_parent"
    		android:layout_weight="497">
    	
	        <TextView
	             android:id="@+id/farba_pozadia"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:textColor="#393939"
        		android:text="@string/farba_pozadia"
        		android:includeFontPadding="false" />
	        
	        <ImageView
        		android:id="@+id/slide_color"
        		android:layout_width="match_parent"
        		android:layout_height="wrap_content"
        		android:scaleType="fitXY"
        		android:layout_alignParentBottom="true" />   		
    	</RelativeLayout>
    	
    	
    	<LinearLayout
    		android:layout_width="0dp"
    		android:layout_height="match_parent"
    		android:layout_weight="6"
    		android:background="#d4d4d4"
    		android:orientation="horizontal" >
    	</LinearLayout>
    
    	<LinearLayout
    		android:layout_width="0dp"
    		android:layout_height="match_parent"
    		android:layout_weight="177"
    		android:orientation="horizontal" >
    	</LinearLayout>
    	
    	<RelativeLayout
    		android:layout_width="0dp"
    		android:layout_height="match_parent"
    		android:layout_weight="320">
    	
	        <TextView
	            android:id="@+id/vyber_jazyka"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:textColor="#393939"
        		android:text="@string/vyber_jazyka"
        		android:includeFontPadding="false" />
	        
	        <ImageView
        		android:id="@+id/slide_language"
        		android:layout_width="match_parent"
        		android:layout_height="wrap_content"
        		android:scaleType="fitXY"
        		android:layout_alignParentBottom="true"/>   		
    	</RelativeLayout>
	    
	</LinearLayout>
	
	<LinearLayout
     	android:id="@+id/slide_layout19"
    	android:layout_width="match_parent"
    	android:layout_height="0dp"
    	android:layout_weight="74"
    	android:orientation="horizontal" >
	</LinearLayout>

	<LinearLayout
    	android:layout_width="match_parent"
    	android:layout_height="0dp"
    	android:layout_weight="5"
    	android:orientation="horizontal" 
    	android:background="#d4d4d4">
	</LinearLayout>
	
	<LinearLayout
    	android:layout_width="match_parent"
    	android:layout_height="0dp"
    	android:layout_weight="2"
    	android:orientation="horizontal" >
	</LinearLayout>
	
